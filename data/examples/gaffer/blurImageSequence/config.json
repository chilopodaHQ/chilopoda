{
  "scripts": [
    "*/*.py"
  ],
  "vars": {
    "__uiHintSourceColumns": []
  },
  "tasks": [
    {
      "run": "gafferScene",
      "metadata": {
        "match.types": [
          "exr"
        ],
        "match.vars": {
          "imageType": [
            "sequence"
          ]
        }
      },
      "options": {
        "scene": "{configDirectory}/scene.gfr"
      },
      "target": "/tmp/gafferTest/(newver <parent> as <ver>)/{name}_<ver>.(pad {frame} 4).exr",
      "tasks": [
        {
          "run": "ffmpeg",
          "options":{
            "frameRate": 23.976,
            "sourceColorSpace": "bt709",
            "targetColorSpace": "smpte170m"
          },
          "target": "(dirname {filePath})/{name}.mov",
          "tasks": [
            {
                "include": "./includes/copy.json"
            }
          ]
        }
      ]
    }
  ]
}
