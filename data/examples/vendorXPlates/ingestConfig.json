{
  "scripts": [
    "*/*.py"
  ],
  "vars": {
    "__uiHintSourceColumns": [
      "type",
      "job",
      "seq",
      "shot"
    ]
  },
  "tasks": [
    {
      "run": "convertImage",
      "metadata": {
        "match.types": [
          "vendorXPngPlate"
        ],
        "match.vars": {
          "imageType": [
            "sequence"
          ]
        }
      },
      "target": "/tmp/jobs/{job}/seq/{seq}/shot/{shot}/plates/{plateName}/(newver <parent> as <ver>)/{width}x{height}_exr/{job}_{seq}_{shot}_<ver>.(pad {frame} 6).exr",
      "tasks": [
        {
          "run": "vendorData",
          "target": "(parentdirname {filePath})/vendor.json"
        },
        {
          "run": "resizeImage",
          "options": {
            "width": "({width}/2)",
            "height": "({height}/2)"
          },
          "target": "(parentdirname {filePath})/({width}/2)x({height}/2)_{ext}/{baseName}",
          "tasks": [
            {
              "run": "convertImage",
              "target": "(parentdirname {filePath})/{width}x{height}_jpg/{name}.(pad {frame} 6).jpg"
            }
          ]
        },
        {
          "run": "ffmpeg",
          "options": {
            "frameRate": 23.976,
            "sourceColorSpace": "bt709",
            "targetColorSpace": "smpte170m"
          },
          "target": "(parentdirname {filePath})/plate.mov"
        },
        {
          "run": "sequenceThumbnail",
          "target": "(parentdirname {filePath})/thumbnail.png"
        }
      ]
    }
  ]
}
